<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="item" />

        <com.shalan.mohamed.itemcounterview.IncDecView
            android:id="@+id/itemCounter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:border_color="@android:color/holo_red_light"
            app:border_width="2dp"
            android:layout_marginEnd="10dp"
            app:dec_icon="@drawable/ic_remove"
            app:inc_icon="@drawable/ic_add"
            app:startCounterValue="0"

            app:counterValueColor="@android:color/background_dark"
            />


    </LinearLayout>
